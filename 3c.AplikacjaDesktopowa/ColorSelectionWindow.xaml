<Window x:Class="_3c.AplikacjaDesktopowa.ColorSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_3c.AplikacjaDesktopowa"
        mc:Ignorable="d"
        Title="Wybierz kolor" MinWidth="400" MinHeight="400"  MaxHeight="400" MaxWidth="400">
    <Grid>
        <TextBox x:Name="RedColor" HorizontalAlignment="Center" Margin="0,115,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" MaxLength="255"/>
        <TextBox x:Name="GreenColor" HorizontalAlignment="Center" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" Margin="0,174,0,0"/>
        <TextBox x:Name="BlueColor" HorizontalAlignment="Center" Margin="0,231,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,82,0,0" TextWrapping="Wrap" Text="Red" TextAlignment="Center" VerticalAlignment="Top" Height="27" Width="120"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,153,0,0" TextWrapping="Wrap" Text="Green" TextAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="0.61,0.652"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,204,0,0" TextWrapping="Wrap" Text="Blue" TextAlignment="Center" VerticalAlignment="Top" Height="27" Width="120"/>
        <Button Content="Zapisz" HorizontalAlignment="Center" Margin="0,295,0,0" VerticalAlignment="Top" Width="120" Click="SaveColor_Click"/>

    </Grid>
</Window>
